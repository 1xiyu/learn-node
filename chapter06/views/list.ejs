<!DOCTYPE html>
<html>
  <head>
    <title>list</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <%- include header %>
    <table cellpadding="0" cellspacing="0">
        <colgroup>
            <col style="width: 10%;"></col>
            <col style="width: 40%;"></col>
            <col></col>
        </colgroup>
        <tr>
            <th>序号<%= totalPages %></th>
            <th>标题</th>
            <th>内容</th>
        </tr>
        <% res.forEach(function(row,index){  %>
        <tr>
            <td><%= (index+1) %></td>
            <td><%- row.title %></td>
            <td><%- row.content %></td>
        </tr>
        <% }) %>
        <tr>
            <td colspan="3">
                <a href="./list?pageNo=1">首页</a>
                <a href="./list?pageNo=<%=pageNo > 1 ? pageNo-1 : 1%>">上一页</a>
                <a href="./list?pageNo=<%=pageNo < totalPages ? parseInt(pageNo)+1 : totalPages%>">下一页</a>
                <a href="./list?pageNo=<%=totalPages%>">尾页</a>
                <%= pageNo %>/<%= totalPages %>
                总共有<%= count %>条记录
            </td>
        </tr>
    </table>
  </body>
</html>
